<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    tools:context=".searched_sub">


            <LinearLayout
                android:id="@+id/linear_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/search_location_icon"
                    android:layout_weight="1"
                    app:tint = "@color/mainVarient_yellow"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/loc_inform_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="한남대"/>
                    <TextView
                        android:id="@+id/loc_inform_detail1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대전광역시 대덕구 한남로 70 한남대학교"
                        android:layout_marginLeft="10dp"
                        android:layout_marginVertical="5dp"
                        android:textSize="13dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dist1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="339m"
                        android:layout_margin="5dp"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/longi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="longi"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/lati1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="lati"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="#cccccc"/>


</LinearLayout>